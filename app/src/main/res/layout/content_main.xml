<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <customfonts.MyTextView_Roboto_Regular
        android:id="@+id/bMeal"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_above="@+id/bCatalogue"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_gradient"
        android:gravity="center"
        android:lineSpacingExtra="34sp"
        android:text="Pending Meal"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <customfonts.MyTextView_Roboto_Regular
        android:id="@+id/bDiet2"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_above="@+id/bMeal"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_gradient"
        android:gravity="center"
        android:lineSpacingExtra="34sp"
        android:text="Meal Planner"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <customfonts.MyTextView_Roboto_Regular
        android:id="@+id/bCatalogue"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_above="@+id/bEducation"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_gradient"
        android:gravity="center"
        android:lineSpacingExtra="34sp"
        android:text="Meal Lists"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <customfonts.MyTextView_Roboto_Regular
        android:id="@+id/bEducation"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_gradient"
        android:gravity="center"
        android:lineSpacingExtra="34sp"
        android:text="Diet and health Education"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bDiet2"
        android:layout_alignParentStart="true"
        android:scaleType = "fitXY"
        android:adjustViewBounds = "true"
        android:layout_marginBottom="31dp" />

</RelativeLayout>