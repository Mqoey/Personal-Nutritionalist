<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".login.SplashScreenActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/myTextView_Roboto_Medium"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:src="@drawable/logopn" />

    <customfonts.MyTextView_Roboto_Medium
        android:id="@+id/myTextView_Roboto_Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="142dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="31sp"
        android:text="Please wait..."
        android:textColor="#474559"
        android:textSize="25dp"
        android:textStyle="normal" />



</RelativeLayout>